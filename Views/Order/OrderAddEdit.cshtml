@model Order
<div class="card-body">
    <h5 class="card-title">Order Form</h5>

    <!-- Vertical Form -->
    <form class="row g-3" asp-controller="Order" asp-action="OrderSave">
        <input type="hidden" name="OrderID" asp-for="OrderID"/>
        <div class="col-12">
            <label for="inputNanme4" class="form-label">Order Date</label>
            <input type="date" asp-for="OrderDate"  >
            <span asp-validation-for="OrderDate" class="text-danger"></span>
        </div>
        <div class="col-12">
            <label for="inputEmail4" class="form-label">Customer ID</label>
            <select class="form-control" asp-for="CustomerID" asp-items="@(new SelectList(ViewBag.CustomerList, "CustomerId", "CustomerName"))">
                <option value="">Select Customer</option>
            </select>
            <span asp-validation-for="CustomerID" class="text-danger"></span>
        </div>
        <div class="col-12">
            <label for="inputPassword4" class="form-label">PaymentMode</label>
            <input type="text" asp-for="PaymentMode" class="form-control" id="inputPassword4">
            <span asp-validation-for="PaymentMode" class="text-danger"></span>
        </div>
        <div class="col-12">
            <label for="inputAddress"  class="form-label">TotalAmount</label>
            <input type="number" asp-for="TotalAmount" class="form-control" id="inputAddress">
            <span asp-validation-for="TotalAmount" class="text-danger"></span>
        </div>
        <div class="col-12">
            <label for="inputAddress" class="form-label">ShippingAddress</label>
            <input type="text" asp-for="ShippingAddress" class="form-control" id="inputAddress">
            <span asp-validation-for="ShippingAddress" class="text-danger"></span>
        </div>
        <div class="col-12">
            <label for="inputAddress" class="form-label">UserID</label>
            <select class="form-control" asp-for="UserID" asp-items="@(new SelectList(ViewBag.UserList, "UserID", "UserName"))">
                <option value="">Select User</option>
            </select>
            <span asp-validation-for="UserID" class="text-danger"></span>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-action="Index" asp-controller="Order" class="btn btn-secondary">Cancel</a>
        </div>
    </form><!-- Vertical Form -->

</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
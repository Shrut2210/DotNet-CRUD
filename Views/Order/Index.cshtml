@model DataTable
@using System.Data

<div class="card-body d-flex flex-column  justify-content-center w-100">
    <h5 class="card-title fs-2 fw-bold">Order</h5>
    <div class="d-flex gap-1">
        <div>
            <a asp-controller="Order" asp-action="OrderAddEdit" class="btn btn-success">ADD</a>
        </div>
        <div>
            <a asp-controller="Order" asp-action="ExportToExcel" class="btn btn-success">Export</a>
        </div>
    </div>
</div>
        <div class="datatable-container">
            <table class="table datatable datatable-table">

                <thead>
                <th>Order Date</th>
                <th>Customer Name</th>
                <th>Payment Mode</th>
                <th>Total Amount</th>
                <th>Shipping Address</th>
                <th>User Name</th>
                <th colspan="2"> Actions</th>
                </thead>
                <tbody>
                    @foreach (DataRow row in Model.Rows)
                    {
                        <tr>
                            <td>@row["OrderDate"]</td>
                             <td>@row["CustomerName"]</td>
                            <td>@row["PaymentMode"]</td>
                            <td>@row["TotalAmount"]</td>
                            <td>@row["ShippingAddress"]</td>
                            <td>@row["UserName"]</td>
                            <td><a class="btn btn-primary" asp-controller="Order" asp-action="OrderAddEdit" asp-route-OrderID="@row["OrderID"]"><i class="bi bi-pencil-fill"></i></a></td>
                            <td><a class="btn btn-danger"><i class="bi bi-trash"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- End Table with stripped rows -->

</div>


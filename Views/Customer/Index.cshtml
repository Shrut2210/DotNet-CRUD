@model DataTable
@using System.Data

<div class="card-body d-flex flex-column  justify-content-center w-100">
    <h5 class="card-title fs-2 fw-bold">Customer</h5>
    <div class="d-flex gap-1">
        <div>
            <a asp-controller="Customer" asp-action="CustomerAddEdit" class="btn btn-success">ADD</a>
        </div>
        <div>
            <a asp-controller="Customer" asp-action="ExportToExcel" class="btn btn-success">Export</a>
        </div>
    </div>
</div>
        <div class="datatable-container mt-4">
            <table class="table datatable datatable-table">

                <thead>
                <th>CustomerName</th>
                <th>HomeAddress</th>
                <th>Email</th>
                <th>MobileNo</th>
                <th>GST NO </th>
                <th>CityName</th>
                <th>PinCode</th>
                <th>NetAmount</th>
                <th>User Name</th>
                <th colspan="2"> Actions</th>
                </thead>
                <tbody>
                    @foreach (DataRow row in Model.Rows)
                    {
                        <tr>
                            <td>@row["CustomerName"]</td>
                            <td>@row["HomeAddress"]</td>
                            <td>@row["Email"]</td>
                            <td>@row["MobileNo"]</td>
                            <td>@row["GSTNO"]</td>
                            <td>@row["CityName"]</td>
                            <td>@row["PinCode"]</td>
                            <td>@row["NetAmount"]</td>
                            <td>@row["UserName"]</td>
                            <td><a class="btn btn-primary" asp-controller="Customer" asp-action="CustomerAddEdit" asp-route-CustomerID="@row["CustomerID"]"><i class="bi bi-pencil-fill"></a></td>
                            <td><a class="btn btn-danger"><i class="bi bi-trash"></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- End Table with stripped rows -->

</div>

